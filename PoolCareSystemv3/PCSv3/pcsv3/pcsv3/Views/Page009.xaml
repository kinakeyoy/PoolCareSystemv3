        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Label Text="Settings Device" TextColor="Blue" FontSize="Large" Grid.Row="0" Grid.Column="0"/>
